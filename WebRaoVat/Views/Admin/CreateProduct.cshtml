@model WebRaoVat.Models.Product
@{
    ViewBag.Title = "Create Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="title-page">Create Product</h2>


@using (Html.BeginForm("CreateProduct", "Admin"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-danger">@ViewBag.ProAlready</p>
        <div class="form-group">
            <p class="control-label col-md-12">Product's Name</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.product1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.product1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-12">Choose Brand</p>
            <div class="col-md-10">
                @Html.DropDownList("id", null, htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                <p class="text-danger">@ViewBag.SelectNull</p>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("ManageProduct","Admin")" class="admin-btn-no">&#8678 Manage page</a>
                <input type="submit" value="Create" class="admin-btn" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
