@model WebRaoVat.Models.ThirdCategory

@{
    ViewBag.Title = "Edit Sub Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="title-page">Edit Sub Category</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-danger">@ViewBag.CateAlready</p>
        @Html.HiddenFor(model => model.third_cate_id)

        <div class="form-group">
            <p class="control-label col-md-12">Sub Category's Name</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.third_cate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.third_cate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-12">Category's Name</p>
            <div class="col-md-10">
                @Html.DropDownList("seccond_cate_id_1", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.seccond_cate_id_1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("Manage3ndCate", "Admin", new{@id2nd = Model.seccond_cate_id_1})" class="admin-btn-no">&#8678 Manage page</a>
                <input type="submit" value="Save Changed" class="admin-btn" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
