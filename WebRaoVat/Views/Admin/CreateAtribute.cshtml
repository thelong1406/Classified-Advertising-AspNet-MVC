@model WebRaoVat.Models.Atribute

@{
    ViewBag.Title = "Create Atribute";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="title-page">Create Atribute</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-danger">@ViewBag.AlreadyAtr</p>
        <div class="form-group">
            <p class="control-label col-md-10">Atribute's name</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.atribute_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.atribute_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-10">Choose Main Category</p>
            <div class="col-md-10">
                @Html.DropDownList("category_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("ManageAtribute","Admin")" class="admin-btn-no">&#8678 Manage page</a>
                <input type="submit" value="Create" class="admin-btn" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
