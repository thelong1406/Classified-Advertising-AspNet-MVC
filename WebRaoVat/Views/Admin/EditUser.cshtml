@model WebRaoVat.Models.User

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="title-page">Edit User: @Model.user_id</h2>
<script src="~/Scripts/GetImageToTagImg.js"></script>
@using (Html.BeginForm("EditUser","Admin",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "validation" })
        @Html.HiddenFor(model => model.user_id)

        <div class="form-group">
            <p class="control-label col-md-12">Password</p>
            <div class="col-12">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "validation" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-12">Phone number</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "validation" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-12">Avatar</p>
            <div class="col-md-10">
                <img src="@Url.Content(Model.image)" height="200" width="200" id="previewImg" />
                <input type="file" name="UploadImage" id="UploadImage" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-12">Email</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "validationr" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-12">Total Rated</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.rate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rate, "", new { @class = "validation" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-12">Rated Count</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.rate_count, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rate_count, "", new { @class = "validation" })
                <p class="validation">@ViewBag.Rate</p>
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-12">Date Joined</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.date_join, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.date_join, "", new { @class = "validation" })
            </div>
        </div>

        <div class="form-group">
            <p class = "control-label col-md-2">Permission</p>
            <div class="col-md-10">
                @Html.DropDownList("permission_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.permission_id, "", new { @class = "validation" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("ManageUser","Admin")" class="admin-btn-no">&#8678 Manage page</a>
                <input type="submit" value="Save Changed" class="admin-btn" />
            </div>
        </div>
    </div>
}