@model WebRaoVat.Models.User

@{
    ViewBag.Title = "Login";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login to Administrator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/adminPage.css" rel="stylesheet" />
</head>
<div class="admin-bg">

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-login admin-form" style="z-index: 2; box-shadow: 1.5vw 1.5vw 1.5vw #c6f1e7;">
        <p class="title-form font-18 font-aqua" style="">Welcome Admin</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class = "control-label col-12">Username</p>
            <div class="col-12">
                @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "validation" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-12">Password</p>
            <div class="col-12">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "validation" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <input type="submit" value="Login" class="login-btn" style="width: 100%; margin-left: 0px;"/>
            </div>
        </div>
    </div>
}