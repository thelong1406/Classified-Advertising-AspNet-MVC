@model WebRaoVat.Models.SeccondCategory

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="title-page">Edit Category: @Model.seccond_cate</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p class="text-danger">@ViewBag.CateAlready</p>
    @Html.HiddenFor(model => model.seccond_cate_id)

    <div class="form-group">
            <p class="control-label col-md-12">Main Category</p>
        <div class="col-md-10">
            @Html.DropDownList("category_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-12">Category's Name</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.seccond_cate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.seccond_cate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="@Url.Action("Manage2ndCate","Admin", new { @idCate = Model.category_id })" class="admin-btn-no">&#8678 Manage page</a>
            <input type="submit" value="Save Changed" class="admin-btn" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
