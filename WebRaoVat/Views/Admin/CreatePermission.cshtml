@model WebRaoVat.Models.Permission

@{
    ViewBag.Title = "Create Permission";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="title-page">Create Permission</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-12">Permission's Name</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.permission1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.permission1, "", new { @class = "text-danger" })
                <p class="validation">@ViewBag.Permission</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("ManagePermission","Admin")" class="admin-btn-no">&#8678 Manage page</a>
                <input type="submit" value="Create" class="admin-btn" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
