@model WebRaoVat.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var returnUrl = (string)ViewData["returnUrl"];

}

@using (Html.BeginForm("LoginUser", "Login",new {@returnUrl=returnUrl }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-3"></div>
        <div class="form-login bg-theme box-shadow col-md-3">
            <p class="font-aqua title-form">Login to our website</p>
            <div class="form-group">
                <div class="col-md-12">
                    <p class="control-label" style="font-weight: bold">Username</p>
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "validation" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <p class="control-label" style="font-weight: bold">Password</p>
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control",@type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "validation" })
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col-md-12"><input type="submit" value="Login" class="border-button btn-bgxanhnhat text-white" style="width:100%; margin-left: 0px;" /></div>
                <div class="col-md-12">
                    <div class="col-md-12">
                        <p class="text-center"><a href="@Url.Action("ForgetPassword","Login")" class="text-center text-white">Forgot your password?</a></p>
                    </div>
                    <hr width="30%" align="center" color="#FAFAFA" />
                </div>
                @if (ViewBag.ErrorInfo != null)
                {
                    <div class="alert-danger">@ViewBag.ErrorInfo</div>
                }
                <div class="col-md-12">
                    <p class="text-center text-white">Have not an account yet?</p>
                    <a href="@Url.Action("RegisterUser","Login")" class="btn border-button btn-bgxanhnhat text-white text-center" style="width:100%; margin-left: 0px;">CREATE AN ACCOUNT</a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

}