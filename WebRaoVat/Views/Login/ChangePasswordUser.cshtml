@model WebRaoVat.Models.User

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ChangePasswordUser", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-3"></div>
        <div class="form-login bg-theme box-shadow col-md-3">
            <h4 class="font-aqua font-18 title-form">Change password</h4>
            @Html.ValidationSummary(true, "", new { @class = "validation" })

            <div class="form-group">
                <p class="control-label col-12">Input your current password</p>
                <div class="col-md-12">
                    <input class="form-control" type="password" placeholder="Your current password" id="pass" name="pass" />
                    <p class="validation">@ViewBag.NotInputPass</p>
                    <p class="validation">@ViewBag.WrongCurPassword</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "validation" })
                    <p class="validation">@ViewBag.WrongNewPassword</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPass, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.ConfirmPass, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Save" class="border-button btn-bgwhite" style="margin-left: auto; width: 100%;" />
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
