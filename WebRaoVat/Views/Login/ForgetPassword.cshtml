@model WebRaoVat.Models.User

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ForgetPassword", "Login", new { @urlstr = Request.Url.Authority.ToString() }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-3"></div>
        <div class="form-login bg-theme box-shadow col-md-3">
            <h4 class="font-aqua font-18 title-form">Reset password</h4>

            <div class="form-group">
                <p class = "control-label col-12">Input your email!</p>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "validation" })
                    @if (ViewBag.Email != null)
                    {
                        <div class="alert">@ViewBag.Email</div>
                    }
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Send" class="border-button btn-bgwhite" style="margin-left: auto; width: 100%;" />
                </div>
                <div class="col-lg-12">
                    <a href="@Url.Action("LoginAccount","Login")" class="text-white" style="width:100%; margin-left: auto;font-size:16px">Back to Login page</a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
